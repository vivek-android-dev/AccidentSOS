<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Options">

    <ImageView
        android:id="@+id/backBtn"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="25dp"
        android:src="@drawable/backbtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/top_wallpaper" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginTop="130dp"
            android:src="@drawable/img_7" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardview"
            android:layout_width="350dp"
            android:layout_height="70dp"
            android:layout_below="@id/imageView3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            app:cardBackgroundColor="#D9D9D9"
            app:cardCornerRadius="30dp">

            <ImageView
                android:id="@+id/profileicon"
                android:layout_width="50dp"
                android:layout_marginTop="10dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/profile_icon" />

            <TextView
                android:id="@+id/name"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/inter_light"
                android:text="Name"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/mobile"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="40dp"
                android:fontFamily="@font/inter_light"
                android:text="Mobile Number"
                android:textSize="15dp" />

            <ImageView
                android:id="@+id/editbtn"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="300dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/img_8" />

        </androidx.cardview.widget.CardView>

        <ImageView
            android:id="@+id/historyid"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_below="@id/cardview"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="50dp"
            app:srcCompat="@drawable/history" />
        <TextView
            android:layout_below="@+id/historyid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="63dp"
            android:textColor="@color/black"
            android:text="History"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/friendsid"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_below="@id/cardview"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="50dp"
            app:srcCompat="@drawable/friends" />

        <TextView
            android:layout_below="@+id/friendsid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="265dp"
            android:textColor="@color/black"
            android:text="Friends"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/feedbackid"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_below="@id/historyid"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="50dp"
            app:srcCompat="@drawable/feedback" />
        <TextView
            android:layout_below="@+id/feedbackid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:textColor="@color/black"
            android:text="Feedback"
            android:textSize="20dp" />


        <ImageView
            android:id="@+id/profile"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_below="@id/friendsid"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="50dp"
            app:srcCompat="@drawable/profile" />
        <TextView
            android:layout_below="@+id/feedbackid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="250dp"
            android:textColor="@color/black"
            android:text="terminate account"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/logout"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_below="@id/feedbackid"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="100dp"
            app:srcCompat="@drawable/logout" />
        <TextView
            android:layout_below="@+id/logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="160dp"
            android:textColor="@color/black"
            android:text="Logout"
            android:textSize="20dp" />

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>